<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guillotine_background"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        style="@style/Toolbar"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/guillotine_hamburger"
            style="@style/ImageView.Hamburger"
            android:src="@drawable/ic_menu" />
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:id="@+id/feed_list"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            android:id="@+id/icon_feed"
            style="@style/ImageView.GuillotineItem"

            android:src="@drawable/feed_icon_list" />

        <dpsd.forites.egglezos.myapplication.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="Feed" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/feed_group"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            android:id="@+id/icon_listview"
            style="@style/ImageView.GuillotineItem"

            android:src="@drawable/icon_listview" />

        <dpsd.forites.egglezos.myapplication.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="List View" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/profile_group"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_marginTop="@dimen/guillotine_medium_margin">

        <ImageView
            android:id="@+id/icon_map"
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/icon_mapview" />

        <dpsd.forites.egglezos.myapplication.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="Map View" />
    </LinearLayout>






    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/guillotine_divider_height" />

    <LinearLayout
        android:id="@+id/settings_group"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/icon_logout" />

        <dpsd.forites.egglezos.myapplication.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="Log Out" />
    </LinearLayout>
</LinearLayout>